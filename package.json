{
  "name": "markdownx",
  "displayName": "Markdown X",
  "description": "A markdown plugin that the person who not familiar with markdown syntax or hexo can use.",
  "version": "0.5.0",
  "publisher": "NS",
  "engines": {
    "vscode": "^1.35.0"
  },
  "categories": [
    "Other",
    "Snippets"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "Markdown Visual",
        "properties": {
          "lilpig.imghandler_script": {
            "type": [
              "string",
              "null"
            ],
            "default": null,
            "description": "图片处理器的位置"
          },
          "lilpig.ucloud_publickey": {
            "type": [
              "string",
              "null"
            ],
            "default": null,
            "description": "UCloud的公钥"
          },
          "lilpig.ucloud_privatekey": {
            "type": [
              "string",
              "null"
            ],
            "default": null,
            "description": "UCloud的私钥"
          },
          "lilpig.ucloud_bucketname": {
            "type": [
              "string",
              "null"
            ],
            "default": "zero",
            "description": "UCloud的桶名"
          },
          "lilpig.ucloud_domain": {
            "type": [
              "string",
              "null"
            ],
            "default": ".cn-bj.ufileos.com",
            "description": "UCloud的域名"
          },
          "lilpig.backupdir": {
            "type": [
              "string",
              "null"
            ],
            "default": null,
            "description": "图片备份目录"
          }
        }
      }
    ],
    "commands": [
      {
        "command": "lilpig.titles",
        "title": "标题开关",
        "icon": {
          "dark": "./res/dark/title.svg",
          "light": "./res/light/title.svg"
        }
      },
      {
        "command": "lilpig.styles",
        "title": "为选中文本添加样式",
        "icon": {
          "dark": "./res/dark/style.svg",
          "light": "./res/light/style.svg"
        }
      },
      {
        "command": "lilpig.imgs",
        "title": "插入图片或链接",
        "icon": {
          "dark": "./res/dark/imgs.svg",
          "light": "./res/light/imgs.svg"
        }
      },
      {
        "command": "lilpig.list",
        "title": "插入列表",
        "icon": {
          "dark": "./res/dark/list.svg",
          "light": "./res/light/list.svg"
        }
      },
      {
        "command": "lilpig.table",
        "title": "插入表格",
        "icon": {
          "dark": "./res/dark/table.svg",
          "light": "./res/light/table.svg"
        }
      },
      {
        "command": "lilpig.quote",
        "title": "插入块",
        "icon": {
          "dark": "./res/dark/quote.svg",
          "light": "./res/light/quote.svg"
        }
      },
      {
        "command": "lilpig.newline",
        "title": "跳转到新的一行"
      },{
        "command":"lilpig.deployandbackup",
        "title": "发布到服务器并备份"
      },{
        "command": "lilpig.localpreview",
        "title": "本地预览"
      }
    ],
    "keybindings": [
      {
        "command": "lilpig.titles",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t"
      },
      {
        "command": "lilpig.styles",
        "key": "ctrl+shift+s",
        "mac": "cmd+shift+s"
      },
      {
        "command": "lilpig.imgs",
        "key": "ctrl+shift+i",
        "mac": "cmd+shift+i"
      },
      {
        "command": "lilpig.list",
        "key": "ctrl+shift+l",
        "mac": "cmd+shift+l"
      },
      {
        "command": "lilpig.table",
        "key": "ctrl+t",
        "mac": "cmd+t"
      },
      {
        "command": "lilpig.quote",
        "key": "ctrl+shift+q",
        "mac": "cmd+shift+q"
      },
      {
        "command": "lilpig.titles",
        "key": "ctrl+shift+1",
        "mac": "cmd+shift+1"
      },
      {
        "command": "lilpig.styles",
        "key": "ctrl+shift+2",
        "mac": "cmd+shift+2"
      },
      {
        "command": "lilpig.imgs",
        "key": "ctrl+shift+3",
        "mac": "cmd+shift+3"
      },
      {
        "command": "lilpig.list",
        "key": "ctrl+shift+4",
        "mac": "cmd+shift+4"
      },
      {
        "command": "lilpig.table",
        "key": "ctrl+shift+5",
        "mac": "cmd+shift+5"
      },
      {
        "command": "lilpig.quote",
        "key": "ctrl+shift+6",
        "mac": "cmd+shift+5"
      },
      {
        "command": "lilpig.newline",
        "key": "shift+enter"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "lilpig.deployandbackup",
          "group": "navigation@1"
        },{
          "command": "lilpig.localpreview",
          "group": "navigation@2"
        }
      ],
      "editor/title": [
        {
          "command": "lilpig.titles",
          "when": "editorLangId == markdown",
          "group": "navigation@1"
        },
        {
          "command": "lilpig.styles",
          "when": "editorLangId == markdown",
          "group": "navigation@2"
        },
        {
          "command": "lilpig.imgs",
          "when": "editorLangId == markdown",
          "group": "navigation@3"
        },
        {
          "command": "lilpig.list",
          "when": "editorLangId == markdown",
          "group": "navigation@4"
        },
        {
          "command": "lilpig.table",
          "when": "editorLangId == markdown",
          "group": "navigation@5"
        },
        {
          "command": "lilpig.quote",
          "when": "editorLangId == markdown",
          "group": "navigation@6"
        }
      ]
    },
    "snippets": [
      {
        "language": "markdown",
        "path": "./snippets.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^3.3.1",
    "vscode": "^1.1.28",
    "tslint": "^5.12.1",
    "@types/node": "^10.12.21",
    "@types/mocha": "^2.2.42"
  },
  "dependencies": {
    "ufile": "^1.0.2"
  }
}
