    "lilpig.insert_hexoheader": {
      "scope": "markdown",
      "prefix": "!h",
      "body": [
        "---",
        "title: ${1:YOURTITLE}",
        "date: ${CURRENT_YEAR}-${CURRENT_MONTH}-${CURRENT_DATE} ${CURRENT_HOUR}:${CURRENT_MINUTE}:${CURRENT_SECOND}",
        "tags: [${2:TAG}]",
        "categories: ${4:CATEGORIES}",
        "---"
      ],
      "description": "Insert Hexo Header"
    }
    
