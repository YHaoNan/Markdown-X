{
    "lilpig.insert_bold": {
		"scope": "markdown",
		"prefix": "b",
		"body": [
			"**$1**"
		],
		"description": "插入粗体"
    },
    "lilpig.insert_italic": {
		"scope": "markdown",
		"prefix": "i",
		"body": [
			"*$1*"
		],
        "description": "插入斜体"
    },
    "lilpig.insert_bolditalic": {
		"scope": "markdown",
		"prefix": "bi",
		"body": [
			"***$1***"
		],
        "description": "插入粗斜体"
    },
    "lilpig.insert_deleteline": {
		"scope": "markdown",
		"prefix": "d",
		"body": [
			"~~$1~~"
		],
        "description": "插入删除线体"
    },
    "lilpig.insert_highlight": {
		"scope": "markdown",
		"prefix": "h",
		"body": [
			"`$1`"
		],
        "description": "插入高亮块"
    },
    
    "lilpig.insert_img": {
		"scope": "markdown",
		"prefix": "img",
		"body": [
			"![${1:alt}](${2:link})"
		],
        "description": "插入图片"
    },
    "lilpig.insert_link": {
		"scope": "markdown",
		"prefix": "a",
		"body": [
			"[${1:test}](${2:link})"
		],
        "description": "插入链接"
    },

    "lilpig.insert_codeblock": {
		"scope": "markdown",
		"prefix": "code",
		"body": [
            "```${1:text/plain}",
            "$2",
            "```"
		],
        "description": "插入代码块"
    },
    "lilpig.insert_codeblock_java": {
		"scope": "markdown",
		"prefix": "java",
		"body": [
            "```java",
